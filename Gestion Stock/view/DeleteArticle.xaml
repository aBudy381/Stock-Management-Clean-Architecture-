<Window x:Class="Gestion_Stock.View.DeleteArticle"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gestion_Stock.View"
        mc:Ignorable="d"
        Title="Suppression" Height="145.725" Width="228.365">
    <Grid Margin="0,0,2,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Supprimer l'article?" FontSize="18" HorizontalAlignment="Center" Margin="36,10,-26,88" Grid.RowSpan="2" Width="208"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="2" Margin="10,26,-10,52">
            <Button x:Name="updatebutton" IsDefault="True" Content="Delete" Command="{Binding CmdSupprimer}" Click="savebutton_Click"/>
            <Button Content="Cancel" Command="{Binding CmdCancel}" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
